{
  "assets": {
    "app.css": [
      "+assets/css/import/variables.*",
      "+assets/css/import/mixins.less",
      "assets/css/cssreset.css",
      "assets/css/normalize.css",
      "assets/css/*.*",
      "components/modules/*/css/*.*",
      "components/modules/*/css/skins/*.*"
    ],
    "app.js": [
      "assets/js/jquery-1.11.1.min.js",
      "assets/js/terrific-2.1.0.js",
      "assets/js/*.js",
      "components/modules/*/js/*.js",
      "components/modules/*/js/skins/*.js"
    ]
  },
  "micro": {
    "components": {
      "module": {
        "template": "project/templates/module",
        "path": "components/modules",
        "component_prefix": "mod",
        "skin_prefix": "skin"
      }
    },
    "view_file_extension": "html",
    "view_directory": "views",
    "view_partials_directory": "views/_partials"
  },
  "viewPath": "views",
  "modulePath": "components/modules",
  "assetPath": "assets",
  "dataPath": "project/data",

  "default_layout": "views/_layouts/_layout.html",
  "default_layout_placeholder": "content",
  "minify": false
}
